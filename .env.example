APP_NAME="TG Market Parser"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# -----------------------------------------------
# База данных (единственная)
# -----------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=telegram_parser
DB_USERNAME=root
DB_PASSWORD=

# -----------------------------------------------
# Telegram API (получить на https://my.telegram.org)
# -----------------------------------------------
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=

# ID или username чата для парсинга
# Пример: -1001250973291 или epsilionwar_trade
TELEGRAM_CHAT_ID=

# Путь к файлу сессии MadelineProto
MADELINE_SESSION_PATH=storage/madeline/session.madeline

# Префикс таблиц MadelineProto (чтобы не путались с нашими)
MADELINE_TABLE_PREFIX=mp_

# -----------------------------------------------
# Настройки парсера
# -----------------------------------------------

# Порог аномалии цены в процентах (50 = ±50% от среднего)
PRICE_ANOMALY_THRESHOLD=50

# Количество дней для расчёта среднего при проверке аномалий
PRICE_ANOMALY_DAYS=7

# Количество дней для загрузки сообщений (по умолчанию 30)
FETCH_DAYS=30

# -----------------------------------------------
# Логирование
# -----------------------------------------------
LOG_CHANNEL=stack
LOG_LEVEL=debug
